#fastqc /lustre/isaac24/proj/UTK0385/bholder5/project1/trimmomatic_results/genome13_R1_paired.fastq.gz /lustre/isaac24/proj/UTK0385/bholder5/project1/trimmomatic_results/genome13_R2_paired.fastq.gz -o /lustre/isaac24/proj/UTK0385/bholder5/project1/trim_fastqc_results/


##Step 4 spades
#!/bin/bash
#spades genome assembler script for project

#spades command
spades.py 

#input files
-1 /lustre/isaac24/proj/UTK0385/bholder5/project1/trimmomatic_results/genome13_R1_paired.fastq.gz 
-2 /lustre/isaac24/proj/UTK0385/bholder5/project1/trimmomatic_results/genome13_R2_paired.fastq.gz 

#data type is isolate
--isolate

#We are going to provide only a single k-mer size for sake of time
-k 55 

# how many threads we want to use for speeding up process
--threads 8 

#output file
-o /lustre/isaac24/proj/UTK0385/bholder5/project1/assembly_results

#ran inline
#spades.py -1 /lustre/isaac24/proj/UTK0385/bholder5/project1/trimmomatic_results/genome13_R1_paired.fastq.gz -2 /lustre/isaac24/proj/UTK0385/bholder5/project1/trimmomatic_results/genome13_R2_paired.fastq.gz --isolate -k 55 --threads 8 -o /lustre/isaac24/proj/UTK0385/bholder5/project1/assembly_results

##Step 5 quast
#!/bin/bash
#QUAST evaluation of genome assembly for project 1

#QUAST command
quast.py \

#output file
-o /lustre/isaac24/proj/UTK0385/bholder5/project1/quast_output \

#thread count
-t 8 \

#SPAdes assembly input file
/lustre/isaac24/proj/UTK0385/bholder5/project1/assembly_results/contigs.fasta

#inline command
#quast.py -o /lustre/isaac24/proj/UTK0385/bholder5/project1/quast_output -t 8 /lustre/isaac24/proj/UTK0385/bholder5/project1/assembly_results/contigs.fasta

##Step 6 prokka
#!/bin/bash
#script to run Prokka for project 1

#prokka command
prokka 

#output folder
--outdir /lustre/isaac24/proj/UTK0385/bholder5/project1/prokka_results 

#prefix for output files
--prefix genome13

#use 8 cores
--cpus 8 

#SPAdes assembly
/lustre/isaac24/proj/UTK0385/bholder5/project1/assembly_results/contigs.fasta

#inline command
#prokka --outdir /lustre/isaac24/proj/UTK0385/bholder5/project1/prokka_results --prefix genome13 --cpus 8 /lustre/isaac24/proj/UTK0385/bholder5/project1/assembly_results/contigs.fasta

