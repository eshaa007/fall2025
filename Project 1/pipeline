##Step 2
#!/bin/bash
# Trimmomatic script for project 1 based on raw FastQC report

#Trimmomatic Command
trimmomatic PE -phred33 \

#input files
/lustre/isaac24/proj/UTK0385/bholder5/project1/raw_data/genome13_R1.fastq.gz \
/lustre/isaac24/proj/UTK0385/bholder5/project1/raw_data/genome13_R2.fastq.gz \

#output files
/lustre/isaac24/proj/UTK0385/bholder5/project1/trimmomatic_results/genome13_R1_paired.fastq.gz \
/lustre/isaac24/proj/UTK0385/bholder5/project1/trimmomatic_results/genome13_R1_unpaired.fastq.gz \
/lustre/isaac24/proj/UTK0385/bholder5/project1/trimmomatic_results/genome13_R2_paired.fastq.gz \
/lustre/isaac24/proj/UTK0385/bholder5/project1/trimmomatic_results/genome13_R2_unpaired.fastq.gz \
ILLUMINACLIP:TruSeq3-PE.fa:2:30:10 \
LEADING:3 TRAILING:3 SLIDINGWINDOW:4:20 MINLEN:36

#Illuminaclip will cut adapters off
#remove leading low quality or N bases below quality 10
#remove trailing low quality or N bases below quality 10
#SLIDINGWINDOW:4:15 will scan the read with a 4 base window cutting when the avg quality drops below 15
#drops reads below 50 bp long

#first filename is the input forward PE file
#second filename is the input reverse PE file

#third filename is the output forward paired trimmed reads
#forth filename is the output forward unpaired trimmed reads

#fifth filemane is the output reverse paired trimmed reads
#sixth filename is the output reverse unpaired trimmed reads

#couldnt get it to run with bash so ran following in line
#trimmomatic PE -phred33 /lustre/isaac24/proj/UTK0385/bholder5/project1/raw_data/genome13_R1.fastq.gz /lustre/isaac24/proj/UTK0385/bholder5/project1/raw_data/genome13_R2.fastq.gz /lustre/isaac24/proj/UTK0385/bholder5/project1/trimmomatic_results/genome13_R1_paired.fastq.gz /lustre/isaac24/proj/UTK0385/bholder5/project1/trimmomatic_results/genome13_R1_unpaired.fastq.gz /lustre/isaac24/proj/UTK0385/bholder5/project1/trimmomatic_results/genome13_R2_paired.fastq.gz /lustre/isaac24/proj/UTK0385/bholder5/project1/trimmomatic_results/genome13_R2_unpaired.fastq.gz ILLUMINACLIP:TruSeq3-PE.fa:2:30:10 LEADING:3 TRAILING:3 SLIDINGWINDOW:4:20 MINLEN:36

##Step 3
